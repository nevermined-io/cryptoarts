{
  "name": "nevermined-marketplace-server",
  "description": "Nevermined marketplace backend.",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "main": "dist/src/server.js",
  "scripts": {
    "start": "nodemon --exec ts-node src/server.ts",
    "serve": "node dist/src/server.js",
    "build": "tsc",
    "test": "jest --coverage --forceExit --runInBand",
    "test:watch": "jest --coverage --watch",
    "coverage": "cat coverage/lcov.info | codacy-coverage --token 8801f827fe1144ffa85cd7da94f2bbf7",
    "lint:js": "eslint --ignore-path .gitignore --ignore-path .prettierignore --ext .ts,.tsx .",
    "lint:fix": "eslint --fix --ignore-path .gitignore --ignore-path .prettierignore --ext .ts,.tsx .",
    "lint": "npm run lint:js"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "@textile/powergate-client": "^4.1.0",
    "aws-sdk": "^2.836.0",
    "axios": "^0.21.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.3.0",
    "file-type": "^16.4.0",
    "formidable": "^1.2.2",
    "gifsicle": "^5.2.0",
    "morgan": "^1.9.1",
    "request": "^2.88.0",
    "sharp": "^0.28.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.14",
    "@types/request": "^2.48.3",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "nodemon": "^2.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^4.2.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nevermined-io/marketplace"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  }
}
